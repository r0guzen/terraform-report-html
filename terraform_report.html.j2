<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Terraform Change Report – {{ device_name }}</title>

<style>
:root {
  --bg-main: #eef1f5;
  --bg-card: #ffffff;
  --bg-soft: #f7f9fc;

  --green: #2ecc71;
  --yellow: #f1c40f;
  --red: #e74c3c;

  --text-main: #2c3e50;
  --text-soft: #6b7280;
}

body {
  margin: 0;
  background: var(--bg-main);
  font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Arial, sans-serif;
}

.container {
  max-width: 1100px;
  margin: auto;
  padding: 24px;
}

.sticky {
  position: sticky;
  top: 0;
  z-index: 10;
  background: var(--bg-main);
  padding-bottom: 10px;
}

.header {
  background: var(--bg-card);
  border-radius: 14px;
  padding: 18px 22px;
  box-shadow: 0 4px 12px rgba(0,0,0,.06);
  margin-bottom: 12px;
}

.header h2 {
  margin: 0;
}

.summary {
  display: flex;
  gap: 12px;
  margin-top: 8px;
  font-size: 13px;
}

.pill {
  background: #e5e9f0;
  padding: 4px 10px;
  border-radius: 999px;
}

.search {
  width: 100%;
  margin-top: 10px;
  padding: 8px 12px;
  border-radius: 8px;
  border: 1px solid #d0d6df;
}

.group {
  background: var(--bg-card);
  border-radius: 14px;
  margin-bottom: 18px;
  box-shadow: 0 3px 10px rgba(0,0,0,.05);
  overflow: hidden;
}

summary {
  padding: 16px 22px;
  cursor: pointer;
  font-weight: 600;
  background: var(--bg-soft);
}

.resource {
  padding: 18px 22px;
  border-top: 1px solid #e6e9ef;
}

.resource-card {
  border-left: 6px solid #ccc;
  padding-left: 14px;
}

.create { border-color: var(--green); }
.update { border-color: var(--yellow); }
.delete { border-color: var(--red); }

.resource-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
}

.badge {
  padding: 3px 10px;
  border-radius: 999px;
  font-size: 11px;
  color: white;
}

.create-badge { background: var(--green); }
.update-badge { background: var(--yellow); }
.delete-badge { background: var(--red); }

.cols {
  display: flex;
  gap: 18px;
}

.col { width: 50%; }

pre {
  background: #f8fafc;
  padding: 10px;
  border-radius: 8px;
  font-size: 12px;
}

.empty {
  text-align: center;
  color: var(--text-soft);
  margin-top: 40px;
  display: none;
}
</style>
</head>

<body>
<div class="container">

{% set creates = resources | selectattr("actions","contains",["create"]) | list | length %}
{% set updates = resources | selectattr("actions","contains",["update"]) | list | length %}
{% set deletes = resources | selectattr("actions","contains",["delete"]) | list | length %}

<div class="sticky">
  <div class="header">
    <h2>FortiGate: {{ device_name }}</h2>

    <div class="summary">
      <span class="pill">Total: {{ resources|length }}</span>
      <span class="pill">Create: {{ creates }}</span>
      <span class="pill">Update: {{ updates }}</span>
      <span class="pill">Delete: {{ deletes }}</span>
    </div>

    <input class="search" placeholder="Search resources, addresses, values…" oninput="filterResources(this.value)">
  </div>
</div>

<div id="content">

{% for type, items in resources | groupby("type") %}
<details class="group">
  <summary>{{ type }} ({{ items|length }})</summary>

  {% for r in items %}
  {% set action = r.actions[0] %}
  <div class="resource" data-search="{{ r.address }} {{ r.before | to_json }} {{ r.after | to_json }}">
    <div class="resource-card {{ action }}">
      <div class="resource-title">
        <strong>{{ r.address }}</strong>
        <span class="badge {{ action }}-badge">{{ action|upper }}</span>
      </div>

      <div class="cols">
        <div class="col">
          <pre>{{ r.before | to_nice_json }}</pre>
        </div>
        <div class="col">
          <pre>{{ r.after | to_nice_json }}</pre>
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
</details>
{% endfor %}

</div>

<div class="empty" id="empty">No matching changes.</div>

</div>

<script>
function filterResources(q) {
  q = q.toLowerCase();
  let any = false;

  document.querySelectorAll(".group").forEach(group => {
    let groupHas = false;

    group.querySelectorAll(".resource").forEach(r => {
      const match = r.dataset.search.toLowerCase().includes(q);
      r.style.display = match ? "" : "none";
      if (match) groupHas = true;
    });

    group.open = q && groupHas;
    group.style.display = groupHas ? "" : "none";
    if (groupHas) any = true;
  });

  document.getElementById("empty").style.display = any ? "none" : "block";
}
</script>

</body>
</html>
